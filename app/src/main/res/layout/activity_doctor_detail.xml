<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DoctorDetailActivity">

    <TextView
        android:id="@+id/healthadv"
        android:layout_width="226dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#9C27B0"
        android:text="Health Advisor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/deftext"
        android:layout_width="226dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:background="#9C27B0"
        android:text="Doctors Detail"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/listv"
        app:layout_constraintTop_toBottomOf="@+id/healthadv"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/listv"
        android:layout_width="418dp"
        android:layout_height="600dp"
        android:layout_margin="10dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/deftext"
        tools:layout_editor_absoluteX="-7dp"></ListView>

    <Button
        android:id="@+id/button"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="12dp"
        android:text="Back"
        android:textSize="5sp"
        app:layout_constraintBottom_toTopOf="@+id/deftext"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>